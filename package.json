{
  "name": "dicoding-hapi-bookshelf-api",
  "version": "1.0.0",
  "description": "Example Project of 'Hapi Js' with typescript and much features. This is a example books REST api built with Hapi js, Typescript. It is an example of how to structure a hapi js REST Api project into models, routes, controllers and services for effective separation of concerns and unit testing.",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "test": "TEST=true jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bungambohlah/dicoding-hapi-bookshelf-api.git"
  },
  "author": "Afif Abdillah Jusuf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bungambohlah/dicoding-hapi-bookshelf-api/issues"
  },
  "homepage": "https://github.com/bungambohlah/dicoding-hapi-bookshelf-api",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.1",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.1",
    "@types/chai": "^4.3.4",
    "@types/hapi": "^18.0.8",
    "@types/jest": "^29.5.0",
    "@types/nedb": "^1.8.13",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "jest": "^29.5.0",
    "nanoid": "^3.3.6",
    "nedb": "^1.8.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.6",
    "@types/hapi__joi": "^17.1.9",
    "@types/hapi__vision": "^5.5.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "hapi-swagger": "^16.0.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3"
  },
  "engines": {
    "node": "16.x"
  }
