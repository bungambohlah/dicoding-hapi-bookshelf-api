  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bungambohlah/dicoding-hapi-bookshelf-api/issues"
  },
  "homepage": "https://github.com/bungambohlah/dicoding-hapi-bookshelf-api",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.0",
    "@hapi/inert": "^6.0.4",
    "@hapi/vision": "^6.1.0",
    "@types/chai": "^4.2.22",
    "@types/hapi": "^18.0.6",
    "@types/jest": "^27.0.2",
    "@types/nedb": "^1.8.12",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
